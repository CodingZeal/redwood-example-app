{
  "private": true,
  "license": "MIT",
  "workspaces": {
    "packages": ["api", "web", "packages/*"]
  },
  "devDependencies": {
    "concurrently": "^7.4.0",
    "prettier": "^2.7.1"
  },
  "eslintConfig": {
    "extends": "@redwoodjs/eslint-config",
    "root": true
  },
  "engines": {
    "node": ">=14.19 <=16.x",
    "yarn": ">=1.15"
  },
  "prisma": {
    "seed": "yarn rw exec seed"
  },
  "packageManager": "yarn@3.2.1",
  "scripts": {
    "start": "node index.js",
    "build": "yarn rw build",
    "lint": "yarn eslint && yarn pretty",
    "eslint": "npx eslint .",
    "pretty": "npx prettier -c .",
    "pretty:fix": "npx prettier -c -w .",
    "dev": "yarn db:daemon && yarn rw dev",
    "test": "yarn rw test",
    "test:nowatch": "yarn rw test --no-watch",
    "test:e2e": "yarn db:test:prepare && npx playwright test -c web/playwright.config.ts",
    "test:e2e:dev": "scripts/e2e-dev.sh",
    "db:test": "yarn db:test:down && docker compose up testdb",
    "db:test:daemon": "yarn db:test:down && docker compose up -d testdb",
    "db:test:down": "docker compose rm -sf testdb",
    "db:test:prepare": "scripts/db-prepare.sh testdb",
    "db": "yarn db:down && docker compose up db",
    "db:prepare": "scripts/db-prepare.sh db",
    "db:daemon": "yarn db:down && docker compose up -d db",
    "db:down": "docker compose down",
    "db:migrate": "yarn rw prisma migrate",
    "db:migrate:reset": "scripts/db-reset.sh",
    "db:migrate:dev": "yarn db:migrate dev",
    "db:migrate:deploy": "yarn db:migrate deploy",
    "db:migrate:data": "yarn rw dataMigrate up",
    "db:seed": "yarn rw prisma db seed",
    "db:setup": "yarn db:migrate:dev && yarn db:seed && yarn db:migrate:data",
    "db:deploy": "yarn db:migrate:deploy && yarn db:migrate:data"
  },
  "dependencies": {
    "@redwoodjs/core": "^3.0.1",
    "pm2": "^5.2.0"
  }
}
