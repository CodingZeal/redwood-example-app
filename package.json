{
  "private": true,
  "license": "MIT",
  "workspaces": {
    "packages": [
      "api",
      "web",
      "packages/*"
    ]
  },
  "devDependencies": {
    "prettier": "^2.7.1"
  },
  "eslintConfig": {
    "extends": "@redwoodjs/eslint-config",
    "root": true
  },
  "engines": {
    "node": ">=14.19 <=16.x",
    "yarn": ">=1.15"
  },
  "prisma": {
    "seed": "yarn rw exec seed"
  },
  "packageManager": "yarn@3.2.1",
  "scripts": {
    "start": "node index.js",
    "build": "yarn rw build",
    "lint": "yarn eslint && yarn pretty",
    "eslint": "npx eslint .",
    "pretty": "npx prettier -c .",
    "dev": "yarn db && yarn rw dev",
    "test": "yarn rw test --no-watch",
    "test:watch": "yarn rw test",
    "test:e2e": "npx playwright test -c web/playwright.config.ts",
    "testdb": "docker compose up -d testdb",
    "testdb:down": "docker compose rm -sf testdb",
    "db": "yarn db:down && docker compose up -d db",
    "db:down": "docker compose down",
    "db:migrate": "yarn rw prisma migrate dev",
    "db:seed": "yarn rw prisma db seed",
    "db:setup": "yarn rw prisma migrate reset"
  },
  "dependencies": {
    "@redwoodjs/core": "^2.2.0",
    "pm2": "^5.2.0"
  }
}
