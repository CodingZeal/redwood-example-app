{
  "private": true,
  "workspaces": {
    "packages": [
      "api",
      "web",
      "packages/*"
    ]
  },
  "scripts": {
    "dev": "npx concurrently \"yarn:db:up:daemon\" \"yarn:rw:web\" \"yarn:rw:api\"",
    "serve": "yarn rw serve",
    "test": "yarn db:test:stop && yarn db:test && yarn rw test --no-watch --detectOp enHandles",
    "test:watch": "yarn db:test:stop && yarn db:test:daemon && yarn rw test",
    "rw:dev": "yarn rw dev",
    "rw:web": "yarn rw:dev web",
    "rw:api": "yarn rw:dev api",
    "rw:prisma": "yarn rw prisma",
    "db:deploy": "yarn db:generate && yarn rw:prisma migrate deploy",
    "db:generate": "yarn rw:prisma generate",
    "db:migrate": "yarn rw:prisma migrate dev",
    "db:reset": "yarn rw:prisma migrate reset",
    "db:seed": "yarn rw:prisma db seed",
    "db:setup": "yarn db:migrate && yarn db:seed",
    "compose": "docker compose -f docker/docker-compose.yml",
    "test:compose": "docker compose -f docker/docker-compose.test.yml",
    "app:up": "yarn app:stop && yarn compose up",
    "app:down": "yarn compose down",
    "app:down:volume": "yarn app:down -v",
    "app:run": "yarn compose run --rm",
    "app:run:daemon": "yarn app:run -d",
    "app:stop": "yarn compose stop",
    "app:restart": "yarn compose restart",
    "app:build": "yarn compose build",
    "app:build:clean": "yarn compose build --no-cache",
    "web:test": "yarn test web",
    "web:test:watch": "yarn test:watch web",
    "web:build:tag": "docker build -t $IMAGE_TAG -f docker/Dockerfile.web .",
    "web:build": "IMAGE_TAG=zeal/redwood-template-web yarn web:build:tag",
    "web:run": "docker run --rm -p 8910:8910 zeal/redwood-template-web",
    "api:build:tag": "docker build -t $IMAGE_TAG -f docker/Dockerfile.api .",
    "api:run": "docker run --rm -p 8911:8911 zeal/redwood-template-api",
    "api:build": "IMAGE_TAG=zeal/redwood-template-api yarn api:build:tag",
    "api:up": "yarn api:stop && yarn compose api up",
    "api:test": "yarn test api",
    "api:test:watch": "yarn test:watch api",
    "api:stop": "yarn compose stop api",
    "db": "docker run --rm -p 5432:5432 --name redwood_template_postgres -e POSTGRES_HOST_AUTH_METHOD=trust postgres:14-alpine",
    "db:up": "yarn app:run -p 5432:5432 db",
    "db:up:daemon": "yarn app:run:daemon -p 5432:5432 db",
    "db:test": "yarn db:test:stop && yarn test:compose run --rm -p 5433:5432 test_db",
    "db:test:stop": "yarn test:compose stop test_db",
    "lint": "yarn rw lint",
    "lint:fix": "yarn rw lint --fix"
  },
  "devDependencies": {
    "@redwoodjs/core": "2.2.0",
    "concurrently": "^7.3.0"
  },
  "eslintConfig": {
    "extends": "@redwoodjs/eslint-config",
    "root": true
  },
  "engines": {
    "node": ">=14.19 <=16.x",
    "yarn": ">=1.15"
  },
  "prisma": {
    "seed": "yarn rw exec seed"
  },
  "packageManager": "yarn@3.2.1"
}
