{
  "private": true,
  "workspaces": {
    "packages": [
      "api",
      "web",
      "packages/*"
    ]
  },
  "devDependencies": {
    "@redwoodjs/core": "2.2.0",
    "prettier-plugin-tailwindcss": "^0.1.13"
  },
  "eslintConfig": {
    "extends": "@redwoodjs/eslint-config",
    "root": true
  },
  "engines": {
    "node": ">=14.19 <=16.x",
    "yarn": ">=1.15"
  },
  "prisma": {
    "seed": "yarn rw exec seed"
  },
  "packageManager": "yarn@3.2.1",
  "scripts": {
    "start": "npx redwood serve",
    "build": "yarn rw build",
    "dev": "yarn db && yarn rw dev",
    "test": "yarn rw test --no-watch",
    "test:watch": "yarn rw test",
    "testdb": "docker compose up -d testdb",
    "testdb:down": "docker compose rm -sf testdb",
    "db": "yarn db:down && docker compose up -d db",
    "db:down": "docker compose down",
    "db:migrate": "yarn rw prisma migrate dev",
    "db:seed": "yarn rw prisma db seed",
    "db:setup": "yarn rw prisma migrate reset"
  }
}
